<?xml version="1.0" encoding="utf-8"?>
<TabHost 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
      	<HorizontalScrollView android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">
      		<TabWidget 
      	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@android:id/tabs" />
      	</HorizontalScrollView>
      	<!-- Begining of tabs -->
      	<FrameLayout 
      	    android:layout_width="match_parent"
           	android:layout_height="match_parent"
       		android:id="@android:id/tabcontent" >
       		<!-- Result tab -->
            <!-- inicia el ScrollView -->
   			<LinearLayout
				android:id="@+id/tab1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
        	<ScrollView 
        	    android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
          	<LinearLayout
				android:id="@+id/insidetab1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<Button
					android:id="@+id/boton_calcular"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/calcular" 
					/>
        	</LinearLayout>
        	</ScrollView>
        	</LinearLayout>
            <!-- Car tab -->
            <!-- inicia el ScrollView -->
   			<LinearLayout
				android:id="@+id/tab2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
        	<ScrollView 
        	    android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
          	<LinearLayout
				android:id="@+id/insidetab2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/coche_consumo_txt"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/grow_txt1" />
				<EditText
					android:id="@+id/coche_consumo_edit"
					android:hint="@string/grow_txt1_hint"
					android:layout_width="fill_parent"
					android:inputType="numberDecimal"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/coche_cilindrada_txt"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/grow_txt2" />
				<EditText
					android:id="@+id/coche_cilindrada_edit"
					android:hint="@string/grow_txt2_hint"
					android:layout_width="fill_parent"
					android:inputType="numberDecimal"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/coche_peso_txt"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/rain_txt1" />
				<EditText
					android:id="@+id/coche_peso_edit"
					android:hint="@string/rain_txt1_hint"
					android:layout_width="fill_parent"
					android:inputType="numberDecimal"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/coche_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/update" 
					/>
        	</LinearLayout>
        	</ScrollView>
        	</LinearLayout>
        	<!-- Route tab -->
          	<!-- inicia el ScrollView -->
          	<LinearLayout
				android:id="@+id/tab3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
        	<ScrollView 
        	    android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
          	<LinearLayout
				android:id="@+id/insidetab3"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/kilometros_txt"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt1" />
				<EditText
					android:id="@+id/kilometros_edit"
					android:hint="@string/specie_txt1_hint"
					android:layout_width="fill_parent"
					android:inputType="numberDecimal"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/peajes_txt"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt2" />
				<EditText
					android:id="@+id/peajes_edit"
					android:hint="@string/specie_txt2_hint"
					android:layout_width="fill_parent"
					android:inputType="numberDecimal"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/specie1_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/update" 
					/>
        	</LinearLayout>
        	</ScrollView>
        	</LinearLayout>
        	<!-- People tab -->
        	<!-- inicia el ScrollView -->
        	<LinearLayout
				android:id="@+id/tab4"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
        	<ScrollView 
        	    android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
        	<LinearLayout
				android:id="@+id/insidetab4"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/mujeres_txt"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt1" />
				<EditText
					android:id="@+id/mujeres_edit"
					android:hint="@string/specie_txt1_hint"
					android:layout_width="fill_parent"
					android:inputType="numberDecimal"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/hombres_txt"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt2" />
				<EditText
					android:id="@+id/hombres_edit"
					android:hint="@string/specie_txt2_hint"
					android:layout_width="fill_parent"
					android:inputType="numberDecimal"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/ninos_txt"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt3" />
				<EditText
					android:id="@+id/ninos_edit"
					android:hint="@string/specie_txt3_hint"
					android:layout_width="fill_parent"
					android:inputType="numberDecimal"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/specie2_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/update" 
					/>
        	</LinearLayout>
        	</ScrollView>
        	</LinearLayout>
        	<!-- Help tab -->
        	<!-- inicia el ScrollView -->
        	<LinearLayout
				android:id="@+id/tab5"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
        	<ScrollView 
        	    android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
        	<LinearLayout
				android:id="@+id/insidetab5"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/help"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/help" />
        	</LinearLayout>
        	</ScrollView>
        	</LinearLayout>
  		</FrameLayout>
   		<!-- End of tabs -->
 	</LinearLayout>
</TabHost>